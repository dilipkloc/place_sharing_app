<p id="notice"><%= notice %></p>


<div class='container'>
  <table class="table table-striped ">
    <tr>
      <td>
        <h1 >Places Shared By Me</h1>
      </td>
      <td></td>
      <td></td>
      <td>
        <%= link_to '<button class="btn btn-dark" style="padding-right:5px;">New Place</button>'.html_safe, new_place_path %>
      </td>
    </tr>
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>User</th>
        <th>Share</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.title %></td>
          <td><%= current_user.email %></td>
          <td><%= Share.find(place.share_id).name %></td>
          <td><%= link_to 'Show', place %>
          <%= link_to 'Edit', edit_place_path(place) %>
          <%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <table class="table table-striped ">
    <h1>Places Shared To Me</h1>
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>User</th>
        <th>Share</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.places .each do |place| %>
        <tr>
          <td><%= place.title %></td>
          <td><%= User.find(place.user_id).email %></td>
          <td><%= Share.find(place.share_id).name %></td>
          <td><%= link_to 'Show', place %></td>
          <td><%= link_to 'Edit', edit_place_path(place) %></td>
          <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>
<br>


