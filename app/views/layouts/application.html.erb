<!DOCTYPE html>
<html>
  <head>
    <title>PlaceSharingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://openlayers.org/en/v4.6.5/css/ol.css" type="text/css">
  </head>

  <body>


  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'Share Your Memories', places_path, class: 'navbar-brand' %>
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
    </ul>
    <% if user_signed_in? %>
      <%= link_to "Account Setting", edit_user_registration_path, class: "nav-item" %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-item" %>
    <% end %>
  </div>
</nav>



    

    <%= yield %>
  </body>
</html>
