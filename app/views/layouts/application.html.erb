<!DOCTYPE html>
<html>
  <head>
    <title>PlaceSharingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://openlayers.org/en/v4.6.5/css/ol.css" type="text/css">
    <script src="http://www.openlayers.org/api/OpenLayers.js"></script>
    <script src="https://openlayers.org/en/v4.6.5/build/ol.js" type="text/javascript"></script>
  </head>

  <body>


  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'Share Your Memories', places_path, class: 'navbar-brand' %>
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Places', places_path, class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to 'Users', users_path, class: "nav-link" %>
      </li>
    </ul>
    <% if user_signed_in? %>
      <span class="navbar-text"> 
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active" >
            <%= link_to "Account Setting", edit_user_registration_path, { style: 'text-decoration: none;margin-right: 10px', class: "nav-item" } %>
          </li>
          <li class="nav-item active" >
            <%= link_to "Logout", destroy_user_session_path, { style: 'text-decoration: none;', class: "nav-item", method: :delete } %>
          </li>
        </ul>
      </span>
    <% end %>
  </div>
</nav>



    

    <%= yield %>
  </body>
</html>
