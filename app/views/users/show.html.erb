<h4> <b> Name: </b> <%= @user.first_name + ' ' + @user.last_name %>  </h4>

<h4> <b> Email: </b> <%= @user.email %>  </h4>

<h4> Public places </h4>
<table class="table table-striped ">
  <thead>
    <th>Title</th>
    <th>x_cordinate</th>
    <th>y_cordinate</th>
  </thead>

  <tbody>
    <% @user.places.each do |place| %>
      <% if place.share.name == 'public' %>
        <tr>
          <td> <%= place.title %> </td>
          <td> <%= place.x_axis %> </td>
          <td> <%= place.y_axis %> </td>
      <% end %>
    <% end %>
  </tbody>

</table>