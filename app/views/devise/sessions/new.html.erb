<div style="width: 30%;margin:auto">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-6">
    <%= f.label :login, class:"label" %>
    <%= f.text_field :login, autofocus: true, class: "input" %>
  </div> <span id="loginError" style='color:red'></span>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div> <span id="passwordError" style='color:red'></span>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", id:'submit'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

<script>
  var login_error = document.getElementById('user_login');
  var password_error = document.getElementById('user_password');
  document.getElementById('new_user').addEventListener('submit',function(e){
    if (login_error.value == "") {
      document.getElementById('loginError').innerHTML = 'Login must have a value'
      e.preventDefault();
      setTimeout(function(){
        document.getElementById('submit').disabled = false;
      },100);
    }else{
      document.getElementById('loginError').innerHTML = ''
    }
    if (password_error.value == "") {
      document.getElementById('passwordError').innerHTML = 'Password must have a value'
      e.preventDefault();
      setTimeout(function(){
        document.getElementById('submit').disabled = false;
      },100);
    }else{
      document.getElementById('passwordError').innerHTML = ''
    }
  }, true)
</script>
